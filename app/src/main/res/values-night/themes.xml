<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NetWise" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/bg</item>
    </style>

    <style name="Theme.NetWise.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/inputField</item>
        <item name="boxStrokeColor">@color/inputBorder</item>
    </style>

    <style name="Theme.NetWise.Toggle">
        <item name="background">@drawable/toggle_button_icon</item>
    </style>

    <style name="Theme.NetWise.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/inputField</item>
    </style>

    <style name="Theme.NetWise.RadioBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/radioBtn_bg</item>
        <item name="android:textColor">@color/font</item>
    </style>
</resources>
